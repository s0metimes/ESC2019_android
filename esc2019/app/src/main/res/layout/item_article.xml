<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/layout_rcv_item">

    <TextView
            android:text="2019-07-28 16:30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_createdate" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/fontSmall" android:textAlignment="textEnd" android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"/>

    <TextView
            android:text="오시환"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_createdate"
            android:textSize="@dimen/fontSmall"
            android:textColor="@android:color/black" android:textAlignment="textEnd"
            android:layout_marginEnd="4dp"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp">
        <TextView
                android:text="이곳에는 제목이 들어갑니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:textSize="@dimen/fontMediumLarge" android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textAlignment="textStart"/>
        <TextView
                android:text="이곳은 내용이 들어가는 곳입니다."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_content"
                android:textSize="@dimen/fontMedium"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="textStart"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>